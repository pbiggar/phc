		{
			for(long i = 0; i < $1->value(); i++)
			{
				$2 = NEW(AST_variable, (NEW(AST_reflection, ($2))));
			}

			$$ = $2;
		}
	| static_member
		{
			$$ = $1;
		}
	;

reference_variable:
	  reference_variable '[' dim_offset ']'
		{
			$1->array_indices->push_back($3);
			$$ = $1;
		}
	| reference_variable '{' expr '}'
		{
			if($3 != NULL)
				$3->attrs->set_true("phc.unparser.index_curlies");

			$1->array_indices->push_back($3);
			$$ = $1;
		}
	| compound_variable
		{
			$$ = NEW(AST_variable, ($1));
		}
	;

compound_variable:
	  VARIABLE
		{ 
			Token_variable_name* var = new Token_variable_name($1);
			$$ = var; 
		}
	| '$' '{' expr '}'
		{ 
			$3->attrs->set_true("phc.unparser.needs_user_curlies");
			$$ = NEW(AST_reflection, ($3)); 
		}
	;

dim_offset:
	  /* empty */
		{
			$$ = NULL;
		}
	| expr
		{
			$$ = $1;
		}
	;

object_property:
	  object_dim_list
		{
			$$ = $1;
		}
	| variable_without_objects 
		{
			// This is a "normal" variable (which includes a $), i.e. $x->$y
			// So, we need to add a level of indirection
			$$ = NEW(AST_variable, (NEW(AST_reflection, ($1)))); 
		}
	;

/*
 * Mimics reference_variable
 */
object_dim_list:
	  object_dim_list '[' dim_offset ']'
		{
			$1->array_indices->push_back($3);
			$$ = $1;
		}
	| object_dim_list '{' expr '}'
		{
			if($3 != NULL)
				$3->attrs->set_true("phc.unparser.index_curlies");

			$1->array_indices->push_back($3);
			$$ = $1;
		}
	| variable_name
		{
			$$ = NEW(AST_variable, ($1)); 
		}
	;

/* 
 * Mimics compound_variable
 */ 
variable_name:
	  IDENT
		{ 
			Token_variable_name* var = new Token_variable_name($1);
			$$ = var; 
		}
	| '{' expr '}'
		{ 
			$2->attrs->set_true("phc.unparser.needs_user_curlies");
			$$ = NEW(AST_reflection, ($2)); 
		}
	;

/*
 * Counts the number of dollar signs (indirections)
 */
simple_indirect_reference:
	  '$'
		{
			$$ = new Integer(1);
		} 
	| simple_indirect_reference '$'
		{
			(*$1)++;
			$$ = $1; 
		}
	;

assignment_list:
	  assignment_list ',' assignment_list_element
		{
			$1->list_elements->push_back($3);
			
			$$ = $1; 
		}
	| assignment_list_element
		{
			List<AST_list_element*>* elements = new List<AST_list_element*>;
			elements->push_back($1);
			
			$$ = NEW(AST_nested_list_elements, (elements)); 
		}
	;

/*
 * Can be NULL for an empty list element, list($x, , $y)
 */
assignment_list_element:
	  variable
		{
			$$ = expect_variable($1); 
		}
	| K_LIST '(' assignment_list ')'
		{
			$$ = $3;
		}
	| /* empty */
		{
			$$ = NULL;
		}
	;

array_pair_list:
	  /* emtpy */
		{
			$$ = new List<AST_array_elem*>;
		}
	| non_empty_array_pair_list possible_comma
		{
			$$ = $1;
		}
	;

/*
 * Code duplicated in non_empty_static_array_pair_list
 */
non_empty_array_pair_list:
	  non_empty_array_pair_list ',' expr O_DOUBLEARROW expr
		{
			AST_array_elem* elem = NEW(AST_array_elem, ($3, false, $5));
			$1->push_back(elem);

			$$ = $1;
		}
	| non_empty_array_pair_list ',' expr
		{
			AST_array_elem* elem = NEW(AST_array_elem, (NULL, false, $3));
			$1->push_back(elem);
			
			$$ = $1;
		}
	| expr O_DOUBLEARROW expr
		{
			List<AST_array_elem*>* list = new List<AST_array_elem*>;
			AST_array_elem* elem = NEW(AST_array_elem, ($1, false, $3));
			list->push_back(elem);

			$$ = list;
		}
	| expr
		{
			List<AST_array_elem*>* list = new List<AST_array_elem*>;
			AST_array_elem* elem = NEW(AST_array_elem, (NULL, false, $1));
			list->push_back(elem);

			$$ = list;
		}
	| non_empty_array_pair_list ',' expr O_DOUBLEARROW '&' w_variable
		{
			AST_array_elem* elem = 
				NEW(AST_array_elem, ($3, true, $6));
			$1->push_back(elem);

			$$ = $1;
		}
	| non_empty_array_pair_list ',' '&' w_variable 
		{
			AST_array_elem* elem = 
				NEW(AST_array_elem, (NULL, true, $4));
			$1->push_back(elem);
			
			$$ = $1;
		}
	| expr O_DOUBLEARROW '&' w_variable 
		{
			List<AST_array_elem*>* list = new List<AST_array_elem*>;
			AST_array_elem* elem = 
				NEW(AST_array_elem, ($1, true, $4));
			list->push_back(elem);

			$$ = list;
		}
	| '&' w_variable
		{
			List<AST_array_elem*>* list = new List<AST_array_elem*>;
			AST_array_elem* elem = 
				NEW(AST_array_elem, (NULL, true, $2));
			list->push_back(elem);

			$$ = list;
		}
	;

internal_functions_in_yacc:
	 K_ISSET '(' isset_variables ')' 
		{
			Token_method_name* fn = NEW(Token_method_name, (new String("isset")));
			$$ = NEW(AST_method_invocation, (NULL, fn, $3));
		}
	| K_EMPTY '(' variable ')'
		{
			$$ = NEW(AST_method_invocation, ("empty", $3));
		}
	| K_INCLUDE expr 
		{
			$$ = NEW(AST_method_invocation, ("include", $2));
		}
	| K_INCLUDE_ONCE expr
		{
			$$ = NEW(AST_method_invocation, ("include_once", $2));
		}
	| K_EVAL '(' expr ')'
		{
			$$ = NEW(AST_method_invocation, ("eval", $3));
		}
	| K_REQUIRE expr 
		{
			$$ = NEW(AST_method_invocation, ("require", $2));
		}
	| K_REQUIRE_ONCE expr
		{
			$$ = NEW(AST_method_invocation, ("require_once", $2));
		}
	;

isset_variables:
	  variable
		{
			List<AST_actual_parameter*>* params = new List<AST_actual_parameter*>;
			
			params->push_back(NEW(AST_actual_parameter, (false, $1)));
			$$ = params;
		}
	| isset_variables ',' variable
		{
			$1->push_back(NEW(AST_actual_parameter, (false, $3)));
			$$ = $1;
		}
	;

class_constant:
	  fully_qualified_class_name O_COLONCOLON IDENT
		{
			Token_constant_name* constant = new Token_constant_name($3);

			$$ = NEW(AST_constant, ($1, constant));
		}
	;

/*
 * Specific to phc; in the original grammar, this always appeared inlined
 * We factor it out since we need to generate the NOP if necessary
 */
block:
	  '{' inner_statement_list '}'
		{
			// If there are any remaining comments, add them as a NOP
			if(!context->last_comments.empty())
				$2->push_back(NEW(AST_nop, ()));

			if(!$2->empty())
				$2->front()->attrs->erase("phc.unparser.is_wrapped");

			$$ = $2;
		}
