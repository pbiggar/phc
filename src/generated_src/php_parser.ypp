unticked_statement:
	  block
	  	{ 
			$$ = $1;
		}
	| keyword_if '(' expr ')' statement elseif_list else_single
		{
			$1->expr = $3;
			$1->iftrue = $5;
			
			if($6)
			{
				List<AST_statement*>* new_false = new List<AST_statement*>;
				new_false->push_back($6);
				
				/* 
				 * Nest the $6 part
				 *
				 * We must add it to the most deeply nested if we can find
				 * Note that _if_ any of the nested ifs (elseifs) has a false
				 * branch, then this consists of a single instruction, an AST_if*.
				 * So, the dynamic_cast is guaranteed to succeed.
				 *
				 * This is similar to the code in elseif_list. 
				 */ 
				while(!$6->iffalse->empty())
					$6 = dynamic_cast<AST_if*>($6->iffalse->front());
				$6->iffalse = $7;
				
				$1->iffalse = new_false;
			}
			else
			{
				$1->iffalse = $7;
			}

			$$ = wrap($1);
		}
	| keyword_if '(' expr ')' ':' inner_statement_list new_elseif_list new_else_single K_ENDIF ';'
		{
			// Duplication of logic above for K_IF.
			
			$1->expr = $3;
			$1->iftrue = $6;
		
			if($7)
			{
				List<AST_statement*>* new_false = new List<AST_statement*>;
				new_false->push_back($7);

				while(!$7->iffalse->empty())
					$7 = dynamic_cast<AST_if*>($7->iffalse->front());
				$7->iffalse = $8;
				
				$1->iffalse = new_false;	
			}
			else
			{
				$1->iffalse = $8;
			}
	
			$$ = wrap($1);
		}
	| keyword_while '(' expr ')' while_statement
		{
			$1->expr = $3;
			$1->statements = $5;

			$$ = wrap($1);
		}
	| keyword_do statement K_WHILE '(' expr ')' ';'
		{
			$1->statements = $2;
			$1->expr = $5;
			
			$$ = wrap($1);
		}
	| keyword_for '(' for_expr ';' for_expr ';' for_expr ')' for_statement
		{
			$1->init = $3;
			$1->cond = $5;
			$1->incr = $7;
			$1->statements = $9;
			
			$$ = wrap($1);
		}
	| keyword_switch '(' expr ')' switch_case_list
		{
			$1->expr = $3;
			$1->switch_cases = $5;
			
			$$ = wrap($1);
		}
	| K_BREAK ';'
		{
			$$ = wrap(NEW(AST_break, (NULL)));
		}
	| K_BREAK expr ';'
		{
			$$ = wrap(NEW(AST_break, ($2)));
		}
	| K_CONTINUE ';'
		{
			$$ = wrap(NEW(AST_continue, (NULL)));
		}
	| K_CONTINUE expr ';'
		{
			$$ = wrap(NEW(AST_continue, ($2)));
		}
	| K_RETURN ';'
		{
			$$ = wrap(NEW(AST_return, (NULL)));
		}
	| K_RETURN expr_without_variable ';'
		{
			$$ = wrap(NEW(AST_return, ($2)));
		}
	| K_RETURN variable ';'
		{
			$$ = wrap(NEW(AST_return, ($2)));
		}
	| K_GLOBAL global_var_list ';'
		{
			$$ = wrap(NEW(AST_global, ($2)));
		}
	| K_STATIC static_var_list ';'
		{
			$$ = $2;
		}
	| K_ECHO echo_expr_list ';'
		{
			$$ = wrap ($2);
		}
	| INLINE_HTML
		{
			Token_string* scalar = NEW(Token_string, ($1, $1));
			AST_expr* fn = NEW(AST_method_invocation, ("echo", scalar));
			AST_eval_expr* eval_expr = NEW(AST_eval_expr, (fn));

			eval_expr->attrs->set_true("phc.unparser.is_inline_html");

			$$ = wrap(eval_expr);
		}
	| expr ';'
		{
			$$ = wrap(NEW(AST_eval_expr, ($1)));
		}
	| K_USE use_filename ';'
		{
			AST_method_invocation* fn;
			fn = NEW(AST_method_invocation, ("use", $2));
			$$ = wrap(NEW(AST_eval_expr, (fn)));
		}
	| K_UNSET '(' unset_variables ')' ';'
		{
			AST_method_invocation* fn;
			Token_method_name* unset;
			unset = new Token_method_name(new String("unset"));
			fn = NEW(AST_method_invocation, (NULL, unset, $3));
			$$ = wrap(NEW(AST_eval_expr, (fn)));
		}
	| keyword_foreach '(' variable K_AS foreach_variable foreach_optional_arg ')' foreach_statement
		{
			$1->expr = $3;
			$1->statements = $8;
	
			if($6)
			{
